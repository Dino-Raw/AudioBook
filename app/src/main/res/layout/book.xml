<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="2dp"
	android:layout_marginTop="2dp">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<ImageView
			android:id="@+id/row_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_margin="10dp"
			android:adjustViewBounds="true"
			android:layout_centerVertical="true"
			tools:src="@drawable/ic_launcher_background"
			android:contentDescription="Image"/>

		<TextView
			android:id="@+id/row_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_toEndOf="@+id/row_img"
			android:maxLines="2"
			android:ellipsize="end"
			android:layout_margin="3dp"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/row_genre"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:maxLines="2"
			android:ellipsize="end"
			android:layout_marginTop="3dp"
			android:layout_alignStart="@id/row_title"
			android:layout_below="@+id/row_title"/>

		<TextView
			android:id="@+id/row_author"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:maxLines="2"
			android:ellipsize="end"
			android:layout_marginTop="3dp"
			android:layout_alignStart="@id/row_title"
			android:layout_below="@+id/row_genre"/>

		<TextView
			android:id="@+id/row_reader"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:maxLines="2"
			android:ellipsize="end"
			android:layout_marginTop="3dp"
			android:layout_alignStart="@id/row_title"
			android:layout_below="@+id/row_author"/>

		<TextView
			android:id="@+id/row_time"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:maxLines="2"
			android:ellipsize="end"
			android:layout_marginTop="3dp"
			android:layout_alignStart="@id/row_title"
			android:layout_below="@+id/row_reader"/>

	</RelativeLayout>

</androidx.cardview.widget.CardView>