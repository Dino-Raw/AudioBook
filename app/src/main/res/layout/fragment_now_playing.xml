<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="50dp"
	tools:context=".fragments.NowPlayingFragment"
	android:background="?android:attr/windowBackground">

	<Button
		android:id="@+id/nextBtnNP"
		android:layout_width="35dp"
		android:layout_height="35dp"
		android:layout_alignParentEnd="true"
		android:background="@drawable/ic_skip_next_black_24dp"
		android:layout_centerVertical="true"
		android:layout_marginEnd="10dp"/>

	<Button
		android:id="@+id/playPauseBtnNP"
		android:layout_width="35dp"
		android:layout_height="35dp"
		android:background="@drawable/ic_pause_black_24dp"
		android:layout_centerVertical="true"
		android:layout_toStartOf="@id/nextBtnNP"
		android:layout_marginHorizontal="5dp"/>

	<Button
		android:id="@+id/prevBtnNP"
		android:layout_width="35dp"
		android:layout_height="35dp"
		android:background="@drawable/ic_skip_previous_black_24dp"
		android:layout_centerVertical="true"
		android:layout_toStartOf="@id/playPauseBtnNP"
		android:layout_marginHorizontal="5dp"/>
	
	<TextView
		android:id="@+id/chapterTitleNp"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:text="title"
		android:textSize="15dp"
		android:textStyle="bold"
		android:gravity="center"
		android:singleLine="true"
		android:ellipsize="marquee"
		android:marqueeRepeatLimit="marquee_forever"
		android:layout_toStartOf="@id/prevBtnNP"/>


</RelativeLayout>